<!DOCTYPE html>
<html>
<head>
  <%= csrf_meta_tags %>
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">

  <title>Rails4Skeleton</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>

  <% if params[:controller] != 'application' %>
    <%= stylesheet_link_tag params[:controller], media: 'all', 'data-turbolinks-track' => true %>
    <% if stylesheet_exists?  "#{params[:controller]}/#{params[:action]}" %>
      <%= stylesheet_link_tag "#{params[:controller]}/#{params[:action]}", media: 'all', 'data-turbolinks-track' => true %>
    <% end -%>
  <% end -%>

  <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <![endif]-->  
</head>
<body>

<%= yield %>

<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
<% if params[:controller] != 'application' %>
  <%= javascript_include_tag params[:controller], 'data-turbolinks-track' => true %>
  <% if javascript_exists?     "#{params[:controller]}/#{params[:action]}" %>
    <%= javascript_include_tag "#{params[:controller]}/#{params[:action]}", 'data-turbolinks-track' => true %>
  <% end -%>
<% end -%>
</body>
</html>
